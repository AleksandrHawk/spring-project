<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="musicPlayer.properties"/>

    <bean id="rockMusicBean"
          class="by.aleksandr.demidovich.RockMusic">
    </bean>

    <bean id="classicalMusicBean"
          class="by.aleksandr.demidovich.ClassicalMusic"
          factory-method="getClassicalMusic">
    </bean>

    <bean id="popMusicBean"
          class="by.aleksandr.demidovich.PopMusic">
    </bean>

    <bean id= "musicPlayer"
            class="by.aleksandr.demidovich.MusicPlayer">
        <!-- <constructor-arg ref="musicBean"/> -->
        <property name="musicList">
            <list>
                <ref bean="rockMusicBean"/>
                <ref bean="classicalMusicBean"/>
                <ref bean="popMusicBean"/>
            </list>
        </property>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>